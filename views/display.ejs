<!DOCTYPE html>
<html>
<head>
  <title>Uploaded Image</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="text-center mb-4">
      <h1 class="mb-3">Uploaded Image</h1>
      <img src="<%= image %>" class="img-fluid rounded shadow" style="max-width: 400px;" alt="Uploaded Image" />
    </div>

    <div class="text-center mb-5">
      <button class="btn btn-primary me-2" onclick="downloadImage()">Download Image</button>
      <button class="btn btn-secondary me-2" onclick="shareImage()">Share</button>
      <button class="btn btn-success" onclick="generateQRCode()">Generate QR Code</button>
      <div id="qrcode" class="mt-3"></div>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 class="h5">Extracted Text</h2>
      </div>
      <div class="card-body">
        <pre class="bg-light p-3 rounded"><%= text %></pre>
      </div>
    </div>
  </div>

  <script>
    function downloadImage() {
      const link = document.createElement('a');
      link.href = "<%= image %>";
      link.download = "uploaded_image.jpg";
      link.click();
    }

    function shareImage() {
      if (navigator.share) {
        navigator.share({
          title: 'Check this image',
          text: 'Here is the image I uploaded.',
          url: "<%= image %>"
        }).catch(console.error);
      } else {
        alert("Sharing is not supported in your browser.");
      }
    }

    function generateQRCode() {
      const qrContainer = document.getElementById('qrcode');
      qrContainer.innerHTML = '';
      QRCode.toCanvas(document.createElement('canvas'), "<%= image %>", { width: 200 }, (error, canvas) => {
        if (error) console.error(error);
        qrContainer.appendChild(canvas);
      });
    }
  </script>
</body>
</html>
